<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/white_85"
    android:orientation="vertical" >

    <!-- Card -->

    <LinearLayout
        android:id="@+id/coupon_structure"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_85"
        android:minHeight="@dimen/card_minHeight"
        android:minWidth="@dimen/card_minWidth"
        android:orientation="vertical"
        android:padding="@dimen/card_padding" >

        <!-- Merchant -->

        <TextView
            android:id="@+id/coupon_merchant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_85"
            android:gravity="center_vertical"
            android:minHeight="@dimen/title_minHeight"
            android:textColor="@color/black_85"
            android:textSize="@dimen/textSize_subhead" />

        <!-- Description -->

        <TextView
            android:id="@+id/coupon_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_85"
            android:gravity="center_vertical"
            android:minHeight="@dimen/body_minHeight"
            android:textColor="@color/black_55" />

        <!-- Follows count -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:layout_width="@dimen/icon_layout_size_small"
                android:layout_height="@dimen/icon_layout_size_small"
                android:background="@drawable/favorite"
                android:clickable="true"
                android:contentDescription="@string/favorite"
                android:cropToPadding="true"
                android:height="@dimen/icon_size_small"
                android:padding="@dimen/icon_padding"
                android:scaleType="fitXY"
                android:src="@drawable/ic_favorite_white_36dp"
                android:width="@dimen/icon_size_small" />

            <TextView
                android:id="@+id/coupon_followsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white_85"
                android:gravity="center"
                android:padding="@dimen/icon_padding"
                android:textColor="@color/black_55" />
        </LinearLayout>
    </LinearLayout>

    <!-- Shadow -->

    <View
        android:id="@+id/coupon_shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_zdepth1_height"
        android:background="@color/blue_accent_1" />

</LinearLayout>