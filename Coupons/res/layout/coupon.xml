<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/lightBlue_lighten_3"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightBlue_lighten_3"
        android:orientation="vertical" >

        <!-- Coupon -->

        <TextView
            android:id="@+id/coupon_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_darken_3"
            android:gravity="center"
            android:padding="@dimen/card_padding"
            android:textColor="@color/white_85" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_zdepth1_height"
        android:background="@color/blue_accent_1" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/lightBlue_lighten_3"
        android:orientation="vertical" >

        <!-- Card -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_85"
            android:minHeight="@dimen/verticalSpacing_body"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/paper_card_base_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <!-- Coupon -->

                <TextView
                    android:id="@+id/coupon_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_85"
                    android:minHeight="@dimen/verticalSpacing_body"
                    android:padding="@dimen/card_padding"
                    android:textColor="@color/black_85" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_zdepth1_height"
                android:background="@color/blue_accent_1" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>