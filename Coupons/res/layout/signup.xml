<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/grey_lighten_2"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding" >

    <!-- Card -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white_85"
        android:minHeight="@dimen/verticalSpacing_body"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/paper_card_base_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- Fullname -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/icon_layout_size"
                    android:layout_height="@dimen/icon_layout_size"
                    android:background="@color/blue_accent_1"
                    android:contentDescription="@string/fullname"
                    android:height="@dimen/icon_size"
                    android:padding="@dimen/icon_padding"
                    android:src="@drawable/ic_person_white_48dp"
                    android:width="@dimen/icon_size" />

                <EditText
                    android:id="@+id/signup_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/apptheme_edit_text_holo_light"
                    android:hint="@string/fullname"
                    android:inputType="textEmailAddress"
                    android:minHeight="@dimen/verticalSpacing_body"
                    android:padding="@dimen/card_padding"
                    android:textColor="@color/black_85"
                    android:textColorHighlight="@color/black_85"
                    android:textColorHint="@color/black_85" />
            </LinearLayout>

            <TextView
                android:id="@+id/signup_fullname_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_85"
                android:padding="@dimen/card_padding"
                android:textColor="@color/red_accent_1" />

            <!-- Email -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/icon_layout_size"
                    android:layout_height="@dimen/icon_layout_size"
                    android:background="@color/blue_accent_1"
                    android:contentDescription="@string/email"
                    android:height="@dimen/icon_size"
                    android:padding="@dimen/icon_padding"
                    android:src="@drawable/ic_email_white_48dp"
                    android:width="@dimen/icon_size" />

                <EditText
                    android:id="@+id/signup_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/apptheme_edit_text_holo_light"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:minHeight="@dimen/verticalSpacing_body"
                    android:padding="@dimen/card_padding"
                    android:textColor="@color/black_85"
                    android:textColorHighlight="@color/black_85"
                    android:textColorHint="@color/black_85" />
            </LinearLayout>

            <TextView
                android:id="@+id/signup_email_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_85"
                android:padding="@dimen/card_padding"
                android:textColor="@color/red_accent_1" />

            <!-- Password -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/icon_layout_size"
                    android:layout_height="@dimen/icon_layout_size"
                    android:background="@color/blue_accent_1"
                    android:contentDescription="@string/password"
                    android:height="@dimen/icon_size"
                    android:padding="@dimen/icon_padding"
                    android:src="@drawable/ic_lock_white_48dp"
                    android:width="@dimen/icon_size" />

                <EditText
                    android:id="@+id/signup_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/apptheme_edit_text_holo_light"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:minHeight="@dimen/verticalSpacing_body"
                    android:padding="@dimen/card_padding"
                    android:textColor="@color/black_85"
                    android:textColorHighlight="@color/black_85"
                    android:textColorHint="@color/black_85" />
            </LinearLayout>

            <TextView
                android:id="@+id/signup_password_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_85"
                android:padding="@dimen/card_padding"
                android:textColor="@color/red_accent_1" />

            <!-- Signup button -->

            <Button
                android:id="@+id/signup_signup"
                style="@style/text_body1_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/border_margin"
                android:layout_marginTop="@dimen/border_margin"
                android:background="@color/blue"
                android:clickable="true"
                android:gravity="center"
                android:minHeight="@dimen/verticalSpacing_body"
                android:text="@string/signup" />

            <TextView
                android:id="@+id/signup_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_85"
                android:gravity="center"
                android:padding="@dimen/card_padding"
                android:textColor="@color/red_accent_1" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_zdepth1_height"
            android:background="@color/blue_accent_2" />
    </LinearLayout>

</LinearLayout>