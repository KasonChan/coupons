<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/lightBlue_lighten_3"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding" >

    <!-- Card -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_85"
        android:minHeight="@dimen/verticalSpacing_body"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/paper_card_base_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- Email -->

            <EditText
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_85"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:minHeight="@dimen/verticalSpacing_body"
                android:padding="@dimen/card_padding"
                android:textColor="@color/black_85"
                android:textColorHighlight="@color/black_85"
                android:textColorHint="@color/black_85" />

            <TextView
                android:id="@+id/login_email_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_85"
                android:padding="@dimen/card_padding"
                android:textColor="@color/red_accent_1" />

            <!-- Password -->

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_85"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:minHeight="@dimen/verticalSpacing_body"
                android:padding="@dimen/card_padding"
                android:textColor="@color/black_85"
                android:textColorHighlight="@color/black_85"
                android:textColorHint="@color/black_85" />

            <TextView
                android:id="@+id/login_password_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_85"
                android:padding="@dimen/card_padding"
                android:textColor="@color/red_accent_1" />

            <!-- Login button -->

            <Button
                android:id="@+id/login_login"
                style="@style/text_body1_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/border_margin"
                android:layout_marginTop="@dimen/border_margin"
                android:background="@color/blue"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:minHeight="@dimen/verticalSpacing_body"
                android:text="@string/login" />

            <TextView
                android:id="@+id/login_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_85"
                android:gravity="center"
                android:padding="@dimen/card_padding"
                android:textColor="@color/red_accent_1" />

            <!-- Signup -->

            <Button
                android:id="@+id/login_signup"
                style="@style/text_body1_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/border_margin"
                android:layout_marginTop="@dimen/border_margin"
                android:background="@color/blue"
                android:clickable="true"
                android:gravity="center"
                android:minHeight="@dimen/verticalSpacing_body"
                android:text="@string/signup" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_zdepth1_height"
            android:background="@color/blue_accent_1" />
    </LinearLayout>

</ScrollView>